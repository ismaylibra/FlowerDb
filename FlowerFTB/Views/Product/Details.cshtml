@model Product

<section id="products">
    <div class="container">
        
        <div class="row">
           
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center" data-id="@Model?.Category?.Name?.ToLower()">
                        <div class="img">
                            <a href="">
                                <img src="/img/@Model?.ImageUrl" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@Model?.Name</h6>
                            <p>@Html.Raw(Model?.Content)</p>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$ @Model?.Price</span>
                        </div>
                    </div>
                </div>
         


        </div>
    </div>
</section>