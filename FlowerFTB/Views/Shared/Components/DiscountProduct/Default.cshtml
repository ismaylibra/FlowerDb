@model List<Product>
@{
    var products = Model;
}

@foreach (var product in products)
{
    var discountPrice = product.Price - ((@product.Price * @product.Discount) / 100);

    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
            <div class="img">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                    <img src="/img/@product.ImageUrl" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@product.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50">Add to cart</span>
                <span class="text-black-50">$ @product.Price</span>
                <span class="text-danger"> @product.Discount %</span>
                <span class="text-black-50">$@discountPrice<span>
            </div>
        </div>
    </div>
}